@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix soso: <http://ns.esipfed.org/schema/SO/1.0/SHACL/> .

# Tests for presence of incorrect namespace
# This test can only check for presence of error conditions specifically
# expressed in the checks. Hence it is necessary to add more shapes for
# different classes to be checked.


soso:DatasetBad1Shape
    a sh:NodeShape ;
    sh:targetClass <https://schema.orgDataset/> ;
    sh:message "Expecting SO namespace of <https://schema.org/> not <https://schema.org>" ;
    sh:not [
        sh:path rdf:type ;
        sh:minCount 1;
    ].
soso:DatasetBad2Shape
    a sh:NodeShape ;
    sh:targetClass <http://schema.org/Dataset> ;
    sh:message "Expecting SO namespace of <https://schema.org/> not <http://schema.org/>" ;
    sh:not [
        sh:path rdf:type ;
        sh:minCount 1;
    ].
soso:DatasetBad3Shape
    a sh:NodeShape ;
    sh:targetClass <http://schema.orgDataset/> ;
    sh:message "Expecting SO namespace of <https://schema.org/> not <http://schema.org>" ;
    sh:not [
        sh:path rdf:type ;
        sh:minCount 1;
    ].

soso:DatasetBadXShape
    a sh:NodeShape ;
    sh:targetClass <http://schema.org/Dataset> ;
    sh:message "This message is never displayed" ;
    sh:property soso:testProperty,
        [
            sh:description "test descr"@en ;
            sh:message "test test"@en ;
            sh:name "test"@en ;
            sh:path rdf:type ;
            sh:maxCount 0 ;
        ];
    .
soso:testProperty
    a sh:PropertyShape ;
    sh:description "test descr 2"@en ;
    sh:message "test test 2"@en ;
    sh:name "test 2"@en ;
    sh:path rdf:type ;
    sh:maxCount 0 ;
    .    

